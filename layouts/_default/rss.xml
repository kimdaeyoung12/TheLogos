{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ if eq .Title .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{.}} | {{ end }}{{ .Site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Site.Params.description | default "AI-friendly Korean/English knowledge hub" }}</description>
    <generator>Hugo {{ hugo.Version }}</generator>
    <language>{{ .Site.LanguageCode | default "ko" }}</language>
    <managingEditor>{{ with .Site.Params.author }}{{ . }}{{ end }}</managingEditor>
    <webMaster>{{ with .Site.Params.author }}{{ . }}{{ end }}</webMaster>
    {{ with .Site.Params.copyright }}<copyright>{{ . }}</copyright>{{ end }}
    <lastBuildDate>{{ now.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    {{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .PublishDate.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <dc:creator>{{ .Params.author | default $.Site.Params.author | default "DaeYoung Kim" }}</dc:creator>
      {{- with .Params.categories }}
      {{- range . }}
      <category>{{ . }}</category>
      {{- end }}
      {{- end }}
      {{- with .Params.tags }}
      {{- range . }}
      <category>{{ . }}</category>
      {{- end }}
      {{- end }}
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
      {{- /* Full content for AI crawlers - this is the key enhancement */ -}}
      <content:encoded><![CDATA[
        {{- .Content | safeHTML -}}
      ]]></content:encoded>
    </item>
    {{- end }}
  </channel>
</rss>
